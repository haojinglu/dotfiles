[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[alias]
	co = checkout
	cob = checkout -b
	br = branch
	bra = branch -a
	brr = branch -r
	brd = branch -d
	st = status -sb
	ci = commit
	cm = commit -m
	a = add
	aa = add -A .
	cp = cherry-pick
	amend = commit --amend
	master = !git checkout master && git pull origin
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	di = diff
	rb = rebase
	rbi = rebase -i
[push]
	default = simple
[color]
	ui = auto
[merge]
	tool = vimdiff
